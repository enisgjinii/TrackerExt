{
    "manifest_version": 3,
    "name": "Advanced Site Tracker",
    "version": "1.2",
    "description": "Advanced tracking of time spent on websites with analytics and productivity features",
    "permissions": [
        "storage",
        "tabs",
        "alarms",
        "notifications",
        "idle"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}